<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:elevation="8dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="140dp"
            android:src="@drawable/panda" />


        <TextView
            android:id="@+id/label_txt"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_black_bg_translucent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:text="Health Insurance"
            android:textAllCaps="true"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_image">

            <RelativeLayout
                android:id="@+id/layout_text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/card_desc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Savings" />

                <TextView
                    android:id="@+id/card_desc_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_desc_title"
                    android:paddingLeft="4dp"
                    android:text="$120"
                    android:textSize="20sp" />
            </RelativeLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_no_fill_button_pink"
                android:text="Apply"
                android:textColor="#e70052" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
